{% extends 'layouts/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white shadow-md rounded-lg">
            <thead>
                <tr>
                    <th class="py-3 px-6 bg-blue-600 text-white text-left uppercase text-sm">ID</th>
                    <th class="py-3 px-6 bg-blue-600 text-white text-left uppercase text-sm">Name</th>
                </tr>
            </thead>
            <tbody>

                {% if users is empty %}
                    <tr>
                        <td class="py-3 px-6 text-gray-700" colspan="2">
                            No users found.
                        </td>
                    </tr>
                {% else %}

                {% for user in users %}
                    <tr class="border-b">
                        <td class="py-3 px-6 text-gray-700">
                            <a href="{{ route('users.show', { 'user': user.id }) }}" class="hover:underline">
                                {{ user.id }}
                            </a>
                        </td>
                        <td class="py-3 px-6 text-gray-700">
                            <a href="/users/{{ user.id }}" class="hover:underline">
                                {{ user.first_name }}
                            </a>
                        </td>
                    </tr>

                    
                {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
                            {{ users.links() }}

{% endblock %}
