{% if paginator.hasPages() %}
    <nav aria-label="Page navigation" class="flex justify-center mt-4">
        <ul class="inline-flex items-center space-x-1">
            {% if paginator.onFirstPage() %}
                <li class="page-item">
                    <span class="page-link cursor-not-allowed px-3 py-1 rounded-md bg-gray-300 text-gray-500">&laquo;</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link px-3 py-1 rounded-md bg-blue-500 text-white hover:bg-blue-700" href="{{ paginator.previousPageUrl() }}">&laquo;</a>
                </li>
            {% endif %}

            {% for page in 1..paginator.lastPage() %}
                {% if page == paginator.currentPage() %}
                    <li class="page-item">
                        <span class="page-link px-3 py-1 rounded-md bg-blue-700 text-white">{{ page }}</span>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link px-3 py-1 rounded-md bg-blue-500 text-white hover:bg-blue-700" href="{{ paginator.pageUrl(page) }}">{{ page }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {% if paginator.hasMorePages() %}
                <li class="page-item">
                    <a class="page-link px-3 py-1 rounded-md bg-blue-500 text-white hover:bg-blue-700" href="{{ paginator.nextPageUrl() }}">&raquo;</a>
                </li>
            {% else %}
                <li class="page-item">
                    <span class="page-link cursor-not-allowed px-3 py-1 rounded-md bg-gray-300 text-gray-500">&raquo;</span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
