{% if paginator.hasPages() %}
    <nav aria-label="Page navigation" class="flex justify-center mt-4">
        <ul class="inline-flex items-center space-x-2">
            {% if paginator.onFirstPage() %}
                <li class="page-item">
                    <span class="page-link cursor-not-allowed px-3 py-2 rounded-md bg-gray-300 text-gray-500">&lsaquo;</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link px-3 py-2 rounded-md bg-blue-500 text-white hover:bg-blue-700" href="{{ paginator.previousPageUrl() }}">&lsaquo;</a>
                </li>
            {% endif %}

            {% for element in elements %}
                {% if element is not iterable %}
                    <li class="page-item">
                        <span class="page-link px-3 py-2 rounded-md bg-gray-300 text-gray-700">{{ element }}</span>
                    </li>
                {% endif %}

                {% if element is iterable %}
                    {% for page, url in element %}
                        {% if page == paginator.currentPage() %}
                            <li class="page-item">
                                <span class="page-link px-3 py-2 rounded-md bg-blue-700 text-white">{{ page }}</span>
                            </li>
                        {% else %}
                            <li class="page-item">
                                <a class="page-link px-3 py-2 rounded-md bg-blue-500 text-white hover:bg-blue-700" href="{{ url }}">{{ page }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}

            {% if paginator.hasMorePages() %}
                <li class="page-item">
                    <a class="page-link px-3 py-2 rounded-md bg-blue-500 text-white hover:bg-blue-700" href="{{ paginator.nextPageUrl() }}">&rsaquo;</a>
                </li>
            {% else %}
                <li class="page-item">
                    <span class="page-link cursor-not-allowed px-3 py-2 rounded-md bg-gray-300 text-gray-500">&rsaquo;</span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
