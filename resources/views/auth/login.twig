{% extends 'layouts/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
    <div class="container mx-auto p-4 bg-white shadow-md rounded-lg">
        <h1 class="text-3xl font-bold mb-6">Login</h1>
         {% if session().getFlashBag().has('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">{{ session().getFlashBag().get('error')[0] }}</span>
            </div>
        {% endif %}
        
        {% if session().getFlashBag().has('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">{{ session().getFlashBag().get('success')[0] }}</span>
            </div>
        {% endif %}

        <form action="/auth/login" method="post" class="space-y-4">
            {{ csrf() | raw }}
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email" required class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" id="password" name="password" required class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
            </div>
            <div>
                <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Login
                </button>
            </div>
        </form>
        <div class="mt-4">
            <p>Don't have an account? <a href="/auth/register" class="text-blue-600 hover:underline">Register</a></p>
        </div>
    </div>
{% endblock %}
